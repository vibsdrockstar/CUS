<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#482213"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vibhor.contactform.Devpage">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <EditText
          android:textColor="#ffffff"
          android:textColorHint="#f5f5f5"
          android:id="@+id/et_name"
          android:hint="Name"
          android:inputType="textPersonName"
          android:layout_alignParentTop="true"
          android:layout_alignParentStart="true"
          android:layout_alignParentEnd="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

        <EditText
            android:textColor="#ffffff"
            android:textColorHint="#f5f5f5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_age"
            android:hint="Age"
            android:inputType="number"
            android:maxLength="2"
            android:layout_below="@+id/et_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>

        <EditText
            android:textColor="#ffffff"
            android:textColorHint="#f5f5f5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_skill"
            android:hint="Skills"
            android:inputType="text"
            android:layout_below="@+id/et_age"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>
        <EditText
            android:textColor="#ffffff"
            android:textColorHint="#f5f5f5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_phone"
            android:hint="Phone"
            android:inputType="number"
            android:maxLength="10"
            android:layout_below="@+id/et_skill"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"/>


       </RelativeLayout>
</ScrollView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW"
        android:id="@+id/b_show"
        android:onClick="btn_click"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="174dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:onClick="btn_click"
        android:id="@+id/b_add"
        android:layout_marginEnd="67dp"
        android:layout_alignTop="@+id/b_show"
        android:layout_alignParentEnd="true" />

    <TextView
        android:textColor="#ffffff"
        android:textColorHint="#f5f5f5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView2"
        android:layout_below="@+id/b_show"
        android:layout_alignParentStart="true" />
</RelativeLayout>
